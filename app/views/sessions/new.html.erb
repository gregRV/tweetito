<% if flash[:error] %>
	<p><%= flash[:error] %></p>
<% end %>

<h1>Log In</h1>

<div class="new-session-form">
	<%= form_tag sessions_path do %>
		<%= email_field_tag :email, nil, placeholder: "Email" %>
		<%= password_field_tag :password, nil, placeholder: "Password" %>
		<%= submit_tag "Log In" %>
	<% end %>
</div>
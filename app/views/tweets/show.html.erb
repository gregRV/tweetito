<h1>Your Tweet</h1>

<% if flash[:notice] %>
	<p class="notice"><%= flash[:notice] %></p>
<% end %>

<div class="tweet">
	<p class="timestamp">Created <%= time_ago_in_words(@tweet.created_at) %> ago</p>
	<p><%= @tweet.body %></p>
	<%= link_to "((RT))", retweets_path(tweet_id: @tweet.id), method: "post" %>
</div>